<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.SophiaMainActivity">


    <TextView
        android:id="@+id/textSophia2Info"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#001555"
        android:fontFamily="serif-monospace"
        android:text="Sophia2 information Phone"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#ffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="#001555" />

    <TextView
        android:id="@+id/txImei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Imei:"
        android:textAlignment="viewStart"
        android:textColor="#001555"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vlImei"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txLatitudine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Latitudine:"
        android:textAlignment="viewStart"
        android:textColor="#001555"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vlLatitudine"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txLongitudine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Longitudine:"
        android:textAlignment="viewStart"
        android:textColor="#001555"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vlLongitudine"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>
